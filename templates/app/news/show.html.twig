{% extends 'app/base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
    <div class="article-container">
        <div class="article-header">
            <div class="article-meta">
                <div class="article-category">{{ article.category }}</div>
                <div class="article-date">
                    <i class="fas fa-calendar-alt"></i>
                    {{ article.createdAt|date('d.m.Y H:i') }}
                </div>
                <div class="article-author">
                    <i class="fas fa-user"></i>
                    {{ article.author.username }}
                </div>
            </div>

            <h1 class="article-title">{{ article.title }}</h1>

            {% if article.badgeCodes is not empty %}
                <div class="article-badges">
                    <span class="badges-label">Kazanacağınız Rozetler:</span>
                    <div class="badges-container">
                        {% set badgeArray = article.badgeCodes|split(',') %}
                        {% for badge in badgeArray %}
                            <div class="badge-wrapper" data-tooltip="Rozet Kodu: {{ badge|trim }}">
                                <img src="https://images.habbo.com/c_images/album1584/{{ badge|trim }}.gif"
                                     alt="{{ badge|trim }}"
                                     class="badge-icon">
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="article-image">
            {% if article.coverImage %}
                <img src="{{ asset(article.coverImage) }}" alt="{{ article.title }}">
            {% endif %}
        </div>

        <div class="article-content">
            {{ article.content|raw }}
        </div>

        {% if article.commentsEnabled %}
            <div class="article-comments">
                <h3 class="comments-title">Yorumlar <span class="comments-count">{{ article.comments|length }}</span></h3>

                <div class="comments-container">
                    <div class="comments-left">
                        {% if app.user %}
                            <div class="comment-form-container">
                                <div class="comment-form-header">
                                    <img src="https://www.habbo.com.tr/habbo-imaging/avatarimage?user={{ app.user.username }}&size=b&direction=2&head_direction=3&gesture=sml"
                                         alt="{{ app.user.username }}" class="user-avatar">
                                    <span class="username">{{ app.user.username }}</span>
                                </div>
                                <form action="{{ path('app_news_comment_add', {'id': article.id}) }}" method="post" class="comment-form">
                                    <textarea name="content" placeholder="Yorumunuzu yazın..." required></textarea>
                                    <button type="submit" class="btn-submit">Gönder</button>
                                </form>
                            </div>
                        {% else %}
                            <div class="login-to-comment">
                                <i class="fas fa-comment-alt"></i>
                                <p>Yorum yapabilmek için <a href="{{ path('app_login') }}">giriş yapın</a> veya <a href="{{ path('app_register') }}">kayıt olun</a>.</p>
                            </div>
                        {% endif %}
                    </div>

                    <div class="comments-right">
                        {% if article.comments is empty %}
                            <div class="no-comments">
                                <i class="far fa-comments"></i>
                                <p>Henüz yorum yapılmamış. İlk yorumu sen yap!</p>
                            </div>
                        {% else %}
                            <div class="comments-list">
                                {% for comment in article.comments %}
                                    <div class="comment-item">
                                        <div class="comment-avatar">
                                            <img src="https://www.habbo.com.tr/habbo-imaging/avatarimage?user={{ comment.user.username }}&size=b&direction=2&head_direction=3&gesture=sml"
                                                 alt="{{ comment.user.username }}" class="user-avatar">
                                        </div>
                                        <div class="comment-body">
                                            <div class="comment-header">
                                                <span class="comment-username">{{ comment.user.username }}</span>
                                                <div class="comment-actions">
                                                    <span class="comment-date">
                                                        {% set diff = date().timestamp - comment.createdAt.timestamp %}
                                                        {% if diff < 60 %}
                                                            Az önce
                                                        {% elseif diff < 3600 %}
                                                            {{ (diff / 60)|round }} dakika önce
                                                        {% elseif diff < 86400 %}
                                                            {{ (diff / 3600)|round }} saat önce
                                                        {% elseif diff < 2592000 %}
                                                            {{ (diff / 86400)|round }} gün önce
                                                        {% elseif diff < 31536000 %}
                                                            {{ (diff / 2592000)|round }} ay önce
                                                        {% else %}
                                                            {{ (diff / 31536000)|round }} yıl önce
                                                        {% endif %}
                                                    </span>
                                                    {% if is_granted('ROLE_ADMIN') or app.user and app.user.id == comment.user.id %}
                                                        <form action="{{ path('app_news_comment_delete', {'id': comment.id}) }}" method="post" class="comment-delete-form"
                                                              onsubmit="return confirm('Bu yorumu silmek istediğinize emin misiniz?');">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete-comment-' ~ comment.id) }}">
                                                            <button type="submit" class="btn-delete-comment">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        </form>
                                                    {% endif %}
                                                </div>
                                            </div>
                                            <div class="comment-text">
                                                {{ comment.content|nl2br }}
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endif %}

        <div class="article-actions">
            <a href="{{ path('app_news') }}" class="btn-back">
                <i class="fas fa-arrow-left"></i> Haberlere Dön
            </a>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .article-container {
            max-width: 900px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }

        .article-container .article-header {
            margin-bottom: 2rem;
        }

        .article-container .article-meta {
            display: flex;
            flex-wrap: wrap;
            gap: 1.5rem;
            margin-bottom: 1rem;
            color: #a5b1d6;
        }

        .article-container .article-date, .article-container .article-author {
            display: flex;
            align-items: center;
            font-size: 0.95rem;
        }

        .article-container .article-meta i {
            margin-right: 5px;
            color: #3498db;
        }

        .article-container .article-category {
            background-color: #3498db;
            color: #ffffff;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: bold;
        }

        .article-container .article-title {
            color: #ffffff;
            font-size: 2.5rem;
            font-weight: 700;
            line-height: 1.2;
            margin-bottom: 1.5rem;
        }

        .article-container .article-badges {
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
            margin-top: 1rem;
            background-color: #18233f;
            padding: 10px 15px;
            border-radius: 8px;
        }

        .article-container .badges-label {
            color: #3498db;
            font-weight: 600;
        }

        .article-container .badges-container {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .article-container .badge-wrapper {
            position: relative;
            width: 40px;
            height: 40px;
            cursor: pointer;
            z-index: 5;
        }

        .article-container .badge-icon {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

        .article-container .badge-wrapper[data-tooltip]:hover::after {
            content: attr(data-tooltip);
            position: absolute;
            bottom: calc(100% + 10px);
            left: 50%;
            transform: translateX(-50%);
            background-color: rgba(26, 37, 69, 0.95);
            color: #fff;
            padding: 6px 10px;
            border-radius: 4px;
            font-size: 0.8rem;
            white-space: nowrap;
            pointer-events: none;
            z-index: 50;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            border: 1px solid #3498db;
        }

        .article-container .badge-wrapper[data-tooltip]:hover::before {
            content: '';
            position: absolute;
            bottom: calc(100% + 5px);
            left: 50%;
            transform: translateX(-50%);
            border-width: 5px;
            border-style: solid;
            border-color: rgba(26, 37, 69, 0.95) transparent transparent transparent;
            pointer-events: none;
            z-index: 51;
        }

        .article-container .article-image {
            width: 100%;
            margin-bottom: 2rem;
            border-radius: 10px;
            overflow: hidden;
        }

        .article-container .article-image img {
            width: 100%;
            height: auto;
            display: block;
        }

        .article-container .article-content {
            color: #d1d9f0;
            line-height: 1.7;
            font-size: 1.1rem;
            margin-bottom: 2.5rem;
            background-color: #18233f;
            padding: 25px;
            border-radius: 10px;
        }

        .article-container .article-content h2 {
            color: #3498db;
            font-size: 1.8rem;
            margin: 1.5rem 0 1rem;
        }

        .article-container .article-content h3 {
            color: #a5b1d6;
            font-size: 1.5rem;
            margin: 1.2rem 0 0.8rem;
        }

        .article-container .article-content p {
            margin-bottom: 1.2rem;
        }

        .article-container .article-content img {
            max-width: 100%;
            height: auto;
            border-radius: 5px;
            margin: 1.5rem 0;
        }

        .article-container .article-content a {
            color: #3498db;
            text-decoration: none;
        }

        .article-container .article-content a:hover {
            text-decoration: underline;
        }

        .article-container .article-content hr {
            border: none;
            border-top: 1px solid #324a87;
            margin: 2rem 0;
        }

        .article-container .article-actions {
            display: flex;
            justify-content: space-between;
            margin-top: 2rem;
        }

        .article-container .btn-back {
            display: inline-block;
            padding: 8px 16px;
            border-radius: 5px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.2s;
        }

        .article-container .btn-back {
            background-color: #18233f;
            color: #a5b1d6;
        }

        .article-container .btn-back:hover {
            background-color: #1a2545;
            color: #ffffff;
        }

        .article-container .article-comments {
            background-color: #16213e;
            border-radius: 10px;
            padding: 25px;
            margin-top: 30px;
            margin-bottom: 30px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .article-container .comments-title {
            color: #3498db;
            font-size: 1.5rem;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
        }

        .article-container .comments-count {
            background-color: #3498db;
            color: #fff;
            font-size: 0.9rem;
            border-radius: 20px;
            padding: 3px 10px;
            margin-left: 10px;
        }

        .article-container .comments-container {
            display: flex;
            flex-direction: column;
            gap: 30px;
        }

        .article-container .comment-form-container {
            background-color: #192542;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 20px;
        }

        .article-container .comment-form-header {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

        .article-container .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid #3498db;
        }

        .article-container .username {
            color: #d1d9f0;
            font-weight: 600;
            margin-left: 10px;
        }

        .article-container .comment-form {
            display: flex;
            flex-direction: column;
        }

        .article-container .comment-form textarea {
            background-color: #111b33;
            border: 1px solid #324a87;
            border-radius: 8px;
            color: #d1d9f0;
            padding: 12px;
            min-height: 100px;
            resize: vertical;
            margin-bottom: 15px;
            font-family: inherit;
            font-size: 0.95rem;
        }

        .article-container .comment-form textarea:focus {
            outline: none;
            border-color: #3498db;
            box-shadow: 0 0 0 1px #3498db;
        }

        .article-container .btn-submit {
            background-color: #3498db;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px 15px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
            align-self: flex-end;
        }

        .article-container .btn-submit:hover {
            background-color: #2980b9;
        }

        .article-container .login-to-comment {
            background-color: #192542;
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            margin-bottom: 20px;
        }

        .article-container .login-to-comment i {
            font-size: 2rem;
            color: #3498db;
            margin-bottom: 10px;
        }

        .article-container .login-to-comment p {
            color: #d1d9f0;
        }

        .article-container .login-to-comment a {
            color: #3498db;
            font-weight: 600;
            text-decoration: none;
        }

        .article-container .login-to-comment a:hover {
            text-decoration: underline;
        }

        .article-container .comments-list {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .article-container .comment-item {
            display: flex;
            gap: 15px;
            background-color: #192542;
            border-radius: 10px;
            padding: 15px;
        }

        .article-container .comment-avatar {
            flex-shrink: 0;
        }

        .article-container .comment-body {
            flex-grow: 1;
        }

        .article-container .comment-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 8px;
        }

        .article-container .btn-delete-comment {
            background: none;
            border: none;
            color: #e74c3c;
            cursor: pointer;
            font-size: 0.9rem;
            opacity: 0.7;
            transition: opacity 0.2s;
            padding: 0;
            margin-left: 10px;
        }

        .article-container .btn-delete-comment:hover {
            opacity: 1;
        }

        .article-container .comment-username {
            color: #3498db;
            font-weight: 600;
        }

        .article-container .comment-actions {
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .article-container .comment-date {
            color: #a5b1d6;
            font-size: 0.85rem;
            white-space: nowrap;
        }

        .article-container .comment-text {
            color: #d1d9f0;
            line-height: 1.5;
            word-break: break-word;
        }

        .article-container .no-comments {
            background-color: #192542;
            border-radius: 10px;
            padding: 30px;
            text-align: center;
            color: #a5b1d6;
        }

        .article-container .no-comments i {
            font-size: 3rem;
            color: #324a87;
            margin-bottom: 15px;
        }

        .article-container .no-comments p {
            font-size: 1.1rem;
        }

        @media (max-width: 768px) {
            .article-container .article-title {
                font-size: 2rem;
            }

            .article-container .article-meta {
                flex-direction: column;
                gap: 0.7rem;
            }

            .article-container .article-content {
                font-size: 1rem;
                padding: 20px;
            }

            .article-container .article-comments {
                padding: 15px;
            }

            .article-container .comments-container {
                flex-direction: column;
            }

            .article-container .comment-item {
                flex-direction: column;
                padding: 12px;
            }

            .article-container .comment-avatar {
                margin-bottom: 10px;
            }

            .article-container .comment-header {
                flex-direction: row;
                align-items: flex-start;
            }

            .article-container .comment-actions {
                display: flex;
                align-items: center;
            }

            .article-container .comment-date {
                margin-top: 5px;
            }
        }
    </style>
{% endblock %}
