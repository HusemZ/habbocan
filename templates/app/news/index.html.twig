{% extends 'app/base.html.twig' %}

{% block title %}Haberler{% endblock %}

{% block body %}
    <div class="news-container">
        <div class="page-header">
            <h1>Haberler</h1>
        </div>

        <div class="news-filter">
            <div class="category-filter">
                <div class="filter-label">Kategoriler:</div>
                <div class="filter-options">
                    <a href="{{ path('app_news') }}" class="filter-option {% if active_category is not defined %}active{% endif %}">
                        Tümü
                    </a>
                    {% set categories = [
                        {'id': 1, 'name': 'Habbo', 'slug': 'habbo'},
                        {'id': 2, 'name': 'Habbocan', 'slug': 'habbocan'},
                        {'id': 3, 'name': 'Yol Haritaları', 'slug': 'yol-haritalari'},
                        {'id': 4, 'name': 'Etkinlikler', 'slug': 'etkinlikler'},
                        {'id': 5, 'name': 'Habbo Mağaza', 'slug': 'habbo-magaza'}
                    ] %}
                    {% for category in categories %}
                        <a href="{{ path('app_news', {'category': category.slug}) }}"
                           class="filter-option {% if active_category is defined and active_category == category.name %}active{% endif %}">
                            {{ category.name }}
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>

        {% if news|length > 0 %}
            <div class="news-grid">
                {% for article in news %}
                    <div class="news-card">
                        <div class="news-image">
                            {% if article.coverImage %}
                                <img src="{{ asset(article.coverImage) }}" alt="{{ article.title }}">
                            {% else %}
                                <div class="news-image-placeholder">
                                    <i class="fas fa-newspaper"></i>
                                </div>
                            {% endif %}

                            <div class="news-badges">
                                {% if article.isPinned %}
                                    <div class="news-pinned-badge">
                                        <i class="fas fa-thumbtack"></i>
                                    </div>
                                {% endif %}

                                {% if article.category %}
                                    <div class="news-category-badge">
                                        {{ article.category }}
                                    </div>
                                {% endif %}
                            </div>

                            {% if article.badgeCodes is not empty %}
                                <div class="news-badge-codes">
                                    {% set badgeArray = article.badgeCodes|split(',') %}
                                    {% for badge in badgeArray %}
                                        <div class="badge-wrapper" data-tooltip="Rozet Kodu: {{ badge|trim }}">
                                            <img src="https://images.habbo.com/c_images/album1584/{{ badge|trim }}.gif"
                                                 alt="{{ badge|trim }}"
                                                 class="badge-icon">
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>

                        <div class="news-content">
                            <h2 class="news-title">
                                <a href="{{ path('app_news_show', {'slug': article.slug}) }}">
                                    {{ article.title }}
                                </a>
                            </h2>

                            <div class="news-meta">
                                <div class="news-date">
                                    <i class="fas fa-calendar-alt"></i>
                                    {% set diff = date().timestamp - article.createdAt.timestamp %}
                                    {% if diff < 60 %}
                                        Az önce
                                    {% elseif diff < 3600 %}
                                        {{ (diff / 60)|round }} dakika önce
                                    {% elseif diff < 86400 %}
                                        {{ (diff / 3600)|round }} saat önce
                                    {% elseif diff < 2592000 %}
                                        {{ (diff / 86400)|round }} gün önce
                                    {% elseif diff < 31536000 %}
                                        {{ (diff / 2592000)|round }} ay önce
                                    {% else %}
                                        {{ (diff / 31536000)|round }} yıl önce
                                    {% endif %}
                                </div>
                                <div class="news-author">
                                    <i class="fas fa-user"></i>
                                    {{ article.author.username }}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            {% if pagination.pageCount > 1 %}
                <div class="pagination">
                    {% if pagination.currentPage > 1 %}
                        <a href="{{ path('app_news', {'page': pagination.currentPage - 1, 'category': active_category.slug|default(null)}) }}" class="pagination-item">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    {% endif %}

                    {% for i in 1..pagination.pageCount %}
                        {% if i == pagination.currentPage %}
                            <span class="pagination-item active">{{ i }}</span>
                        {% else %}
                            <a href="{{ path('app_news', {'page': i, 'category': active_category.slug|default(null)}) }}" class="pagination-item">
                                {{ i }}
                            </a>
                        {% endif %}
                    {% endfor %}

                    {% if pagination.currentPage < pagination.pageCount %}
                        <a href="{{ path('app_news', {'page': pagination.currentPage + 1, 'category': active_category.slug|default(null)}) }}" class="pagination-item">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    {% endif %}
                </div>
            {% endif %}
        {% else %}
            <div class="news-empty-alert">
                <i class="fas fa-info-circle"></i>
                {% if active_category is defined %}
                    Bu kategoride henüz haber bulunmamaktadır.
                {% else %}
                    Henüz haber bulunmamaktadır.
                {% endif %}
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .news-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }

        .news-container .page-header {
            margin-bottom: 30px;
            border-bottom: 2px solid #1a2545;
            padding-bottom: 15px;
        }

        .news-container .page-header h1 {
            color: #3498db;
            font-weight: 700;
        }

        .news-filter {
            background-color: #18233f;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 25px;
        }

        .category-filter {
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            gap: 10px;
        }

        .filter-label {
            font-weight: 600;
            color: #3498db;
            margin-right: 10px;
        }

        .filter-options {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
        }

        .filter-option {
            background-color: #111a39;
            color: #a5b1d6;
            padding: 6px 12px;
            border-radius: 20px;
            text-decoration: none;
            font-size: 0.9rem;
            transition: all 0.2s;
        }

        .filter-option:hover {
            background-color: #1a2545;
            color: #ffffff;
        }

        .filter-option.active {
            background-color: #3498db;
            color: #ffffff;
        }

        .news-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 25px;
            margin-bottom: 30px;
        }

        .news-card {
            background-color: #18233f;
            border: 2px solid #1a2545;
            border-radius: 10px;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
        }

        .news-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
            border-color: #3498db;
        }

        .news-image {
            position: relative;
            height: 180px;
            overflow: visible;
        }

        .news-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .news-image-placeholder {
            width: 100%;
            height: 100%;
            background-color: #111a39;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #3498db;
            font-size: 3rem;
        }

        .news-badges {
            position: absolute;
            top: 10px;
            right: 10px;
            display: flex;
            gap: 8px;
        }

        .news-category-badge {
            background-color: #3498db;
            color: #ffffff;
            padding: 4px 10px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: bold;
        }

        .news-pinned-badge {
            background-color: #ff6b6b;
            color: #ffffff;
            padding: 4px 10px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: bold;
            display: flex;
            align-items: center;
            gap: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

        .news-pinned-badge i {
            font-size: 0.7rem;
            transform: rotate(-30deg);
        }

        .news-badge-codes {
            position: absolute;
            bottom: 10px;
            left: 10px;
            display: flex;
            gap: 5px;
            background-color: rgba(24, 35, 63, 0.7);
            border-radius: 5px;
            padding: 5px;
            z-index: 5;
        }

        .badge-wrapper {
            position: relative;
            width: 40px;
            height: 40px;
            cursor: pointer;
            z-index: 5;
        }

        .badge-icon {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

        .badge-wrapper[data-tooltip]:hover::after {
            content: attr(data-tooltip);
            position: absolute;
            bottom: calc(100% + 10px);
            left: 50%;
            transform: translateX(-50%);
            background-color: rgba(26, 37, 69, 0.95);
            color: #fff;
            padding: 6px 10px;
            border-radius: 4px;
            font-size: 0.8rem;
            white-space: nowrap;
            pointer-events: none;
            z-index: 50;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            border: 1px solid #3498db;
        }

        .badge-wrapper[data-tooltip]:hover::before {
            content: '';
            position: absolute;
            bottom: calc(100% + 5px);
            left: 50%;
            transform: translateX(-50%);
            border-width: 5px;
            border-style: solid;
            border-color: rgba(26, 37, 69, 0.95) transparent transparent transparent;
            pointer-events: none;
            z-index: 51;
        }

        .news-content {
            padding: 20px;
            display: flex;
            flex-direction: column;
            flex-grow: 1;
        }

        .news-title {
            color: #a5b1d6;
            font-size: 1.4rem;
            margin-bottom: 15px;
            font-weight: 600;
            line-height: 1.3;
        }

        .news-title a {
            color: inherit;
            text-decoration: none;
            transition: color 0.2s;
        }

        .news-title a:hover {
            color: #3498db;
        }

        .news-meta {
            display: flex;
            margin-bottom: 15px;
            color: #a5b1d6;
            font-size: 0.9rem;
            gap: 15px;
        }

        .news-date, .news-author {
            display: flex;
            align-items: center;
        }

        .news-meta i {
            margin-right: 5px;
            color: #3498db;
        }

        .news-empty-alert {
            background-color: #18233f;
            color: #a5b1d6;
            padding: 1rem;
            border-radius: 8px;
            border-left: 4px solid #3498db;
            display: flex;
            align-items: center;
        }

        .news-empty-alert i {
            margin-right: 10px;
            font-size: 1.2rem;
            color: #3498db;
        }

        .pagination {
            display: flex;
            justify-content: center;
            gap: 8px;
            margin-top: 30px;
        }

        .pagination-item {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            min-width: 38px;
            height: 38px;
            background-color: #18233f;
            color: #a5b1d6;
            border-radius: 5px;
            text-decoration: none;
            font-weight: 600;
            transition: all 0.2s;
        }

        .pagination-item:hover {
            background-color: #1a2545;
            color: #ffffff;
        }

        .pagination-item.active {
            background-color: #3498db;
            color: #ffffff;
        }

        @media (max-width: 768px) {
            .news-grid {
                grid-template-columns: 1fr;
            }

            .category-filter {
                flex-direction: column;
                align-items: flex-start;
            }

            .filter-options {
                width: 100%;
                margin-top: 10px;
            }
        }
    </style>
{% endblock %}
