{% extends 'app/base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block body %}
    <div class="team-container">
        <div class="page-header">
            <h1>Habbocan Ekibi</h1>
        </div>

        {% for group_name, members in team_groups %}
            {% if members|length > 0 %}
                <div class="team-group">
                    <div class="team-header">
                        <div class="team-icon">
                            {% if group_name == 'Yöneticiler' %}
                                <img src="{{ asset('images/habbo/team/yonetim.png') }}" alt="Yönetim Ekibi">
                            {% elseif group_name == 'Moderatörler' %}
                                <img src="{{ asset('images/habbo/team/moderator.png') }}" alt="Moderatör Ekibi">
                            {% elseif group_name == 'Mimarlar' %}
                                <img src="{{ asset('images/habbo/team/team.png') }}" alt="Mimar Ekibi">
                            {% else %}
                                <img src="{{ asset('images/habbo/team/team.png') }}" alt="Ekip">
                            {% endif %}
                        </div>
                        <h2 class="team-group-title">{{ group_name }}</h2>
                    </div>

                    <div class="team-members-grid">
                        {% for member in members %}
                            <div class="team-member-card">
                                <div class="role-badge">
                                    {% if role_mapping[member.id] is defined %}
                                        {{ role_mapping[member.id] }}
                                    {% elseif group_name == 'Yönetici' %}
                                        {% if 'ROLE_DEVELOPER' in member.roles %}
                                            Geliştirici
                                        {% else %}
                                            Yönetici
                                        {% endif %}
                                    {% elseif group_name == 'Haberci' %}
                                        {% if 'ROLE_HEAD_EDITOR' in member.roles %}
                                            Baş Haberci
                                        {% else %}
                                            Haberci
                                        {% endif %}
                                    {% elseif group_name == 'Mimar' %}
                                        {% if 'ROLE_HEAD_ARCHITECT' in member.roles %}
                                            Baş Mimar
                                        {% else %}
                                            Mimar
                                        {% endif %}
                                    {% elseif group_name == 'Oyun İçi Destek' %}
                                        {% if 'ROLE_HEAD_IN_GAME_HELPER' in member.roles %}
                                            Baş Mimar
                                        {% else %}
                                            Mimar
                                        {% endif %}
                                    {% else %}
                                        {{ group_name }}
                                    {% endif %}
                                </div>

                                <div class="team-member-info">
                                    <div class="team-member-avatar">
                                        <img
                                            src="https://www.habbo.com.tr/habbo-imaging/avatarimage?user={{ member.username }}&action=std&direction=2&head_direction=3&img_format=png&gesture=nrm&size=m"
                                            alt="{{ member.username }} Avatar">
                                    </div>

                                    <div class="team-member-details">
                                        <h3 class="team-member-name">{{ member.username }}</h3>

                                    </div>
                                </div>

                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        {% else %}
            <div class="team-empty-alert">
                <i class="fas fa-info-circle"></i>
                Henüz ekip üyesi bulunmamaktadır.
            </div>
        {% endfor %}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .team-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem 1rem;
        }

        .team-container .page-header {
            margin-bottom: 30px;
            border-bottom: 2px solid #1a2545;
            padding-bottom: 15px;
        }

        .team-container .page-header h1 {
            color: #3498db;
            font-weight: 700;
        }

        .team-header {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
            background-color: #18233f;
            padding: 10px 15px;
            border-radius: 8px;
        }

        .team-icon {
            width: 48px;
            height: 48px;
            margin-right: 15px;
        }

        .team-icon img {
            width: 100%;
            height: 100%;
            object-fit: contain;
        }

        .team-group-title {
            font-weight: 600;
            color: #3498db;
            margin: 0;
            font-size: 1.75rem;
        }

        .team-group {
            margin-bottom: 3rem;
        }

        .team-members-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 1.5rem;
        }

        .team-member-card {
            background-color: #18233f;
            border: 2px solid #1a2545;
            border-radius: 10px;
            position: relative;
            padding: .6rem;
            transition: all 0.3s ease;
            display: flex;
            flex-direction: column;
        }

        .team-member-card:hover {
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
            border-color: #3498db;
        }

        .role-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: #3498db;
            color: #ffffff;
            padding: 3px 10px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: bold;
        }

        .team-member-info {
            display: flex;
            align-items: center;
        }

        .team-member-avatar {
            width: 50px;
            height: 50px;
            flex-shrink: 0;
            margin-right: 15px;
            border-radius: 50%;
            overflow: hidden;
            position: relative;
            border: 2px dashed #3498db;
            background-color: #3498db17;
        }

        .team-member-avatar img {
            position: absolute;
            left: -6px;
            top: -10px;
            object-fit: contain;
        }

        .team-member-details {
            flex-grow: 1;
        }

        .team-member-name {
            font-size: 1.25rem;
            font-weight: 600;
            margin: 0;
            color: #a5b1d6;
        }

        .team-member-join-date i {
            margin-right: 5px;
            color: #3498db;
        }

        .team-empty-alert {
            background-color: #18233f;
            color: #a5b1d6;
            padding: 1rem;
            border-radius: 8px;
            border-left: 4px solid #3498db;
            display: flex;
            align-items: center;
        }

        .team-empty-alert i {
            margin-right: 10px;
            font-size: 1.2rem;
            color: #3498db;
        }

        @media (max-width: 768px) {
            .team-members-grid {
                grid-template-columns: 1fr;
            }

            .team-group-title {
                font-size: 1.5rem;
            }
        }

        @media (max-width: 576px) {
            .team-member-info {
                flex-direction: column;
                text-align: center;
            }

            .team-member-avatar {
                margin-right: 0;
                margin-bottom: 1rem;
            }
        }
    </style>
{% endblock %}
