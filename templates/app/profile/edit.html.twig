{% extends 'app/base.html.twig' %}

{% block title %}Profil Düzenle{% endblock %}

{% block body %}
    <div class="profile-edit-container">
        <div class="profile-card">
            <div class="content-header">
                <div class="section-title">
                    <div class="title-text">
                        <i class="fas fa-user-edit"></i>
                        <span>Profil Düzenle</span>
                    </div>
                </div>
            </div>

            <div class="content-body">
                {% if user %}
                    <div class="avatar-section">
                        <div class="avatar-wrapper">
                            <img src="https://www.habbo.com.tr/habbo-imaging/avatarimage?user={{ user.username }}&size=l&direction=2&head_direction=3&gesture=sml"
                                alt="Kullanıcı Avatar" class="user-avatar">
                        </div>
                        <h2 class="username">{{ user.username }}</h2>
                    </div>
                {% endif %}
                
                <form action="{{ path('app_profile_edit') }}" method="post" class="edit-profile-form">
                    <div class="form-section">
                        <div class="section-heading">
                            <i class="fas fa-lock"></i>
                            <h3>Şifre Değiştir</h3>
                        </div>
                        
                        <div class="form-group">
                            <label for="currentPassword">Mevcut Şifre</label>
                            <div class="input-wrapper">
                                <input type="password" id="currentPassword" name="currentPassword" class="form-control" required>
                                <i class="fas fa-key input-icon"></i>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="newPassword">Yeni Şifre</label>
                            <div class="input-wrapper">
                                <input type="password" id="newPassword" name="newPassword" class="form-control">
                                <i class="fas fa-lock input-icon"></i>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="confirmPassword">Yeni Şifre (Tekrar)</label>
                            <div class="input-wrapper">
                                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control">
                                <i class="fas fa-lock input-icon"></i>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <a href="{{ path('app_profile') }}" class="btn-cancel">
                            <i class="fas fa-times"></i>
                            <span>İptal</span>
                        </a>
                        <button type="submit" class="btn-save">
                            <i class="fas fa-save"></i>
                            <span>Kaydet</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .profile-edit-container {
            max-width: 800px;
            margin: 20px auto;
        }
        
        .profile-card {
            background-color: #111a39;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            border-radius: 24px;
            overflow: hidden;
            margin-bottom: 2rem;
            backdrop-filter: blur(20px);
            border: 1px solid rgba(52, 152, 219, 0.1);
        }
        
        .content-header {
            background: linear-gradient(135deg, rgba(52, 152, 219, 0.1), rgba(41, 128, 185, 0.05));
            padding: 1.5rem 1.6rem;
            border-bottom: 1px solid rgba(52, 152, 219, 0.15);
        }
        
        .section-title {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        
        .title-text {
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 1.3rem;
            font-weight: 700;
            color: #ffffff;
        }
        
        .title-text i {
            color: #3498db;
        }
        
        .content-body {
            padding: 2rem;
        }
        
        .avatar-section {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 2rem;
            border-bottom: 1px solid rgba(52, 152, 219, 0.15);
        }
        
        .avatar-wrapper {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            overflow: hidden;
            margin-bottom: 1rem;
            border: 3px solid #3498db;
            box-shadow: 0 0 20px rgba(52, 152, 219, 0.3);
        }
        
        .user-avatar {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .username {
            color: #ffffff;
            font-size: 1.8rem;
            margin: 0.5rem 0;
            text-align: center;
        }
        
        .form-section {
            background-color: rgba(23, 32, 63, 0.5);
            border-radius: 16px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            border: 1px solid rgba(52, 152, 219, 0.1);
            overflow: hidden;
        }
        
        .section-heading {
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 1.5rem;
            padding-bottom: 0.8rem;
            border-bottom: 1px solid rgba(52, 152, 219, 0.15);
        }
        
        .section-heading i {
            color: #3498db;
            font-size: 1.2rem;
        }
        
        .section-heading h3 {
            color: #ffffff;
            margin: 0;
            font-size: 1.2rem;
        }
        
        .form-group {
            margin-bottom: 1.5rem;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            color: #a5b1d6;
            font-weight: 500;
        }
        
        .input-wrapper {
            position: relative;
            width: 100%;
        }
        
        .form-control {
            width: 100%;
            padding: 12px 15px;
            padding-left: 40px;
            background-color: rgba(17, 26, 57, 0.8);
            border: 1px solid rgba(52, 152, 219, 0.2);
            border-radius: 12px;
            font-size: 1rem;
            color: #ffffff;
            transition: all 0.3s ease;
            box-sizing: border-box;
            max-width: 100%;
        }
        
        .form-control:focus {
            border-color: #3498db;
            outline: none;
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
        }
        
        .input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #3498db;
        }
        
        .form-hint {
            display: block;
            margin-top: 0.5rem;
            color: #a5b1d6;
            font-size: 0.85rem;
        }
        
        .form-actions {
            display: flex;
            justify-content: flex-end;
            gap: 15px;
            margin-top: 1.5rem;
        }
        
        .btn-cancel, .btn-save {
            padding: 10px 20px;
            border-radius: 12px;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
        }
        
        .btn-cancel {
            background-color: rgba(23, 32, 63, 0.7);
            border: 1px solid rgba(52, 152, 219, 0.1);
            color: #a5b1d6;
        }
        
        .btn-save {
            background: linear-gradient(135deg, #3498db, #2980b9);
            border: none;
            color: white;
            cursor: pointer;
        }
        
        .btn-cancel:hover {
            background-color: rgba(23, 32, 63, 1);
            color: #ffffff;
        }
        
        .btn-save:hover {
            background: linear-gradient(135deg, #2980b9, #2573a7);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(41, 128, 185, 0.3);
        }
    </style>
{% endblock %}
