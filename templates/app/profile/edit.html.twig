{% extends 'app/base.html.twig' %}

{% block title %}Profil Düzenle{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/profile-edit.css') }}">
{% endblock %}

{% block body %}
    <div class="profile-edit-container">
        <div class="profile-card">
            <div class="content-header">
                <div class="section-title">
                    <div class="title-text">
                        <i class="fas fa-user-edit"></i>
                        <span>Profil Düzenle</span>
                    </div>
                </div>
            </div>

            <div class="content-body">
                {% if user %}
                    <div class="avatar-section">
                        <div class="avatar-wrapper">
                            <img src="https://www.habbo.com.tr/habbo-imaging/avatarimage?user={{ user.username }}&size=l&direction=2&head_direction=3&gesture=sml"
                                alt="Kullanıcı Avatar" class="user-avatar">
                        </div>
                        <h2 class="username">{{ user.username }}</h2>
                    </div>
                {% endif %}
                
                <form action="{{ path('app_profile_edit') }}" method="post" class="edit-profile-form">
                    <div class="form-section">
                        <div class="section-heading">
                            <i class="fas fa-lock"></i>
                            <h3>Şifre Değiştir</h3>
                        </div>
                        
                        <div class="form-group">
                            <label for="currentPassword">Mevcut Şifre</label>
                            <div class="input-wrapper">
                                <input type="password" id="currentPassword" name="currentPassword" class="form-control" required>
                                <i class="fas fa-key input-icon"></i>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="newPassword">Yeni Şifre</label>
                            <div class="input-wrapper">
                                <input type="password" id="newPassword" name="newPassword" class="form-control">
                                <i class="fas fa-lock input-icon"></i>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="confirmPassword">Yeni Şifre (Tekrar)</label>
                            <div class="input-wrapper">
                                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control">
                                <i class="fas fa-lock input-icon"></i>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <a href="{{ path('app_profile') }}" class="btn-cancel">
                            <i class="fas fa-times"></i>
                            <span>İptal</span>
                        </a>
                        <button type="submit" class="btn-save">
                            <i class="fas fa-save"></i>
                            <span>Kaydet</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}