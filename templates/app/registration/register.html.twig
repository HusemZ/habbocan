{% extends 'app/base.html.twig' %}

{% block title %}Kayıt Ol - Habbocan{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .register-page-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 70vh;
            padding: 20px;
        }

        .register-page-container .auth-card {
            background-color: #18233f;
            background-image: linear-gradient(to bottom, #1a2545, #18233f);
            border-radius: 12px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
            width: 100%;
            max-width: 450px;
            padding: 35px 30px;
            color: #a5b1d6;
            border: 1px solid #2a3c65;
        }

        .register-page-container .auth-title {
            color: #3498db;
            font-size: 1.8rem;
            margin-bottom: 25px;
            text-align: center;
            font-weight: 600;
            text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
        }

        .register-page-container .form-group {
            margin-bottom: 22px;
        }

        .register-page-container .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #a5b1d6;
            font-weight: 500;
        }

        .register-page-container .form-control {
            width: 100%;
            box-sizing: border-box;
            padding: 12px 15px;
            background-color: #111a39;
            border: 1px solid #1a2545;
            border-radius: 6px;
            color: #fff;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .register-page-container .form-control:focus {
            border-color: #3498db;
            outline: none;
            box-shadow: 0 0 0 2px rgba(52, 152, 219, 0.3);
        }

        .register-page-container .btn-primary {
            background-color: #3498db;
            border: none;
            padding: 14px 25px;
            border-radius: 6px;
            color: white;
            font-weight: 600;
            width: 100%;
            margin-top: 15px;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .register-page-container .btn-primary:hover {
            background-color: #2980b9;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
        }

        .register-page-container .auth-footer {
            margin-top: 30px;
            text-align: center;
            color: #a5b1d6;
            padding-top: 15px;
            border-top: 1px solid rgba(165, 177, 214, 0.2);
        }

        .register-page-container .auth-footer a {
            color: #3498db;
            text-decoration: none;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .register-page-container .auth-footer a:hover {
            color: #2ecc71;
            text-decoration: underline;
        }

        .register-page-container .alert {
            padding: 10px;
            margin-bottom: 25px;
            border-radius: 6px;
            font-weight: 500;
        }

        .register-page-container .alert-danger {
            background-color: rgba(231, 76, 60, 0.2);
            border: 1px solid #e74c3c;
            color: #e74c3c;
        }

        .register-page-container .alert-info {
            background-color: rgba(52, 152, 219, 0.2);
            border: 1px solid #3498db;
            color: #3498db;
        }

        .register-page-container .checkbox-container {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

        .register-page-container .checkbox-container input {
            margin-right: 10px;
            width: 16px;
            height: 16px;
            cursor: pointer;
        }

        .register-page-container .checkbox-container label {
            cursor: pointer;
            margin-bottom: 0;
        }

        .register-page-container .auth-logo {
            text-align: center;
            margin-bottom: 20px;
        }

        .register-page-container .auth-logo img {
            max-width: 200px;
            height: auto;
        }

        .auth-decoration {
            position: absolute;
            z-index: -1;
            opacity: 0.6;
        }

        .auth-decoration-1 {
            top: 10%;
            left: 20%;
            width: 100px;
            height: 100px;
            background: radial-gradient(circle, rgba(52, 152, 219, 0.3) 0%, rgba(52, 152, 219, 0) 70%);
        }

        .auth-decoration-2 {
            bottom: 10%;
            right: 10%;
            width: 150px;
            height: 150px;
            background: radial-gradient(circle, rgba(46, 204, 113, 0.3) 0%, rgba(46, 204, 113, 0) 70%);
        }

        .register-page-container .form-row {
            margin-bottom: 20px;
        }

        .register-page-container .form-row label {
            display: block;
            margin-bottom: 8px;
            color: #a5b1d6;
            font-weight: 500;
        }

        .register-page-container .form-row input[type="text"],
        .register-page-container .form-row input[type="password"],
        .register-page-container .form-row input[type="email"] {
            width: 100%;
            box-sizing: border-box;
            padding: 12px 15px;
            background-color: #111a39;
            border: 1px solid #1a2545;
            border-radius: 6px;
            color: #fff;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .register-page-container .form-row input:focus {
            border-color: #3498db;
            outline: none;
            box-shadow: 0 0 0 2px rgba(52, 152, 219, 0.3);
        }

        .register-page-container .form-check {
            display: flex;
            align-items: center;
            margin-top: 15px;
            margin-bottom: 20px;
        }

        .register-page-container .form-check input {
            margin-right: 10px;
            width: 16px;
            height: 16px;
            cursor: pointer;
        }

        .register-page-container .form-check label {
            cursor: pointer;
            margin-bottom: 0;
            font-size: 0.95rem;
        }

        .register-page-container .form-error {
            color: #e74c3c;
            font-size: 0.9rem;
            margin-top: 5px;
        }

        .register-page-container .register-code {
            font-weight: 700;
            color: #3498db;
            font-family: monospace;
            letter-spacing: 1px;
            background: rgba(52, 152, 219, 0.1);
            padding: 5px 10px;
            border-radius: 4px;
            border: 1px dashed #3498db;
        }

        .register-page-container .code-container {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

        .register-page-container .copy-btn {
            background-color: #2ecc71;
            color: white;
            border: none;
            border-radius: 4px;
            padding: 6px 12px;
            font-size: 0.85rem;
            cursor: pointer;
            transition: all 0.3s ease;
            min-width: 80px;
            text-align: center;
        }

        .register-page-container .copy-btn:hover {
            background-color: #27ae60;
            transform: translateY(-2px);
        }

        .register-page-container .copy-btn:active {
            transform: translateY(0);
        }

        .register-page-container .copy-btn.copied {
            background-color: #3498db;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="auth-decoration auth-decoration-1"></div>
    <div class="auth-decoration auth-decoration-2"></div>

    <div class="register-page-container">
        <div class="auth-card">
            <div class="auth-logo">
                <img src="{{ asset('images/logo/logo.png') }}" alt="Habbocan Logo">
            </div>

            <h1 class="auth-title">Habbocan'a Kayıt Ol</h1>

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}

            {% if register_code %}
                <div class="alert alert-info">
                    <div class="code-container">
                        Kayıt kodunuz:
                        <strong class="register-code" id="register-code">{{ register_code }}</strong>
                        <button type="button" class="copy-btn" id="copy-btn" onclick="copyCode()">
                            Kopyala
                        </button>
                    </div>
                </div>
            {% endif %}

            {% if form_errors(registrationForm) %}
                <div class="alert alert-danger">{{ form_errors(registrationForm) }}</div>
            {% endif %}

            {{ form_start(registrationForm, {'attr': {'class': 'auth-form'}}) }}
            <div class="form-row">
                {{ form_label(registrationForm.username, 'Kullanıcı Adı') }}
                {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.username) }}
            </div>

            <div class="form-row">
                {{ form_label(registrationForm.plainPassword, 'Şifre') }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <div class="form-check">
                {{ form_widget(registrationForm.agreeTerms) }}
                {{ form_label(registrationForm.agreeTerms, 'Kullanım şartlarını kabul ediyorum') }}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
            {{ form_end(registrationForm) }}

            <div class="auth-footer">
                <p>Zaten hesabınız var mı? <a href="{{ path('app_login') }}">Giriş Yap</a></p>
            </div>
        </div>
    </div>

    {% if register_code %}
        <script>
            function copyCode() {
                const codeElement = document.getElementById('register-code');
                const copyBtn = document.getElementById('copy-btn');

                const textToCopy = codeElement.textContent;
                navigator.clipboard.writeText(textToCopy).then(function() {
                    copyBtn.textContent = 'Kopyalandı!';
                    copyBtn.classList.add('copied');

                    setTimeout(function() {
                        copyBtn.textContent = 'Kopyala';
                        copyBtn.classList.remove('copied');
                    }, 2000);
                }).catch(function(err) {
                    console.error('Kopyalama başarısız oldu: ', err);
                });
            }
        </script>
    {% endif %}
{% endblock %}
