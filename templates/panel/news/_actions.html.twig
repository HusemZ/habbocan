<div class="btn-group" role="group">
    <a href="{{ path('panel_news_edit', {'id': news.id}) }}"
       class="btn btn-sm btn-outline-primary"
       title="Düzenle">
        <i class="fas fa-edit"></i>
    </a>

    <a href="{{ path('panel_news_show', {'id': news.id}) }}"
       class="btn btn-sm btn-outline-info"
       title="Görüntüle">
        <i class="fas fa-eye"></i>
    </a>

    <button type="button"
            class="btn btn-sm btn-outline-danger delete-news"
            data-id="{{ news.id }}"
            data-title="{{ news.title }}"
            title="Sil">
        <i class="fas fa-trash"></i>
    </button>
</div>
